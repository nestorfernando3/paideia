{
  "name": "paideia",
  "private": true,
  "version": "1.0.1",
  "description": "Παιδεία — Suite de herramientas pedagógicas inspirada en la filosofía griega",
  "repository": {
    "type": "git",
    "url": "https://github.com/nestorfernando3/paideia.git"
  },
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve:local": "node server/index.mjs",
    "start:local": "npm run build && node server/index.mjs",
    "electron:dev": "npm run build && electron .",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "firebase": "^12.9.0",
    "ip": "^2.0.1",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "qrcode": "^1.5.4",
    "selfsigned": "^5.5.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "build": {
    "appId": "com.paideia.app",
    "productName": "Paideia Local",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "dist/**/*",
      "server/**/*"
    ],
    "mac": {
      "target": "zip",
      "icon": "public/favicon.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "publish": [
      "github"
    ]
  }
}